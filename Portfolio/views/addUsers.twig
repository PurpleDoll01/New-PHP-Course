    <div class="alert alert-primary" role="alert">
        {{ responseMessage }}
    </div>
    <form action="/NewCourse/Portfolio/users/add" method="post" enctype="multipart/form-data">
        <label for="">Email:</label>
        <input type="email" name="email"><br>
        <label for="">Password:</label>
